package {
    // See: http://go/android-license-faq
    // A large-scale-change added 'default_applicable_licenses' to import
    // all of the 'license_kinds' from "hardware_qcom_sm7250_display_license"
    // to get the below license kinds:
    //   SPDX-license-identifier-Apache-2.0
    //   SPDX-license-identifier-BSD
    //   legacy_not_a_contribution
    default_applicable_licenses: ["hardware_qcom_sdm845_display_license"],
}

cc_library_shared {

    name: "libdrmutils",
    vendor: true,
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
    shared_libs: [
        "libdrm",
        "libdl",
        "libdisplaydebug",
    ],
    cflags: [
        "-DLOG_TAG=\"DRMUTILS\"",
        "-Wall",
        "-std=c++11",
        "-Werror",
        "-fno-operator-names",
    ],

    srcs: [
        "drm_master.cpp",
        "drm_res_mgr.cpp",
        "drm_lib_loader.cpp",
    ],

}
